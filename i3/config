for_window [class="Transmission-gtk"] move window to workspace $ws8

for_window [class="vlc"] move window to workspace $ws7

for_window [class="TelegramDesktop"] move window to workspace $ws6

for_window [class="Org.gnome.Nautilus"] move window to workspace $ws5

for_window [class="Gimp-2.10"] move window to workspace $ws4
for_window [class="Rawtherapee"] move window to workspace $ws4

for_window [class="Sublime_text"] move window to workspace $ws3
for_window [class="VSCodium"] move window to workspace $ws3

for_window [class="Firefox"] move window to workspace $ws2


